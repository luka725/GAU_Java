<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.library.application.controller.BooksController">
    <TableView fx:id="booksTable">
        <columns>
            <TableColumn text="Book ID" fx:id="bookIdColumn"/>
            <TableColumn text="Title" fx:id="titleColumn"/>
            <TableColumn text="Author" fx:id="authorColumn"/>
            <TableColumn text="Publisher" fx:id="publisherColumn"/>
            <TableColumn text="Genre" fx:id="genreColumn"/>
            <TableColumn text="Available" fx:id="availableColumn"/>
        </columns>
    </TableView>
</VBox>
